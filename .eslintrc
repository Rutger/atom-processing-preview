{
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "atom": true,
    "Promise": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "rules": {
    "no-undef": "error",
    "indent": ["error", "tab"],
    "semi": "error",
    "comma-dangle": ["error", "always-multiline"],
    "no-unused-vars": "error"
  }
}
